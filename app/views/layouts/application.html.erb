<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div>
        <p>
          <%= notice %>
        </p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div>
        <p>
          <%= alert %>
        </p>
      </div>
    <% end %>
    <header>
      <%= link_to root_path do %>
        <h1>MO</h1>
      <% end %>
      <nav>
        <%= link_to "Username", root_path %>
        <%= link_to "Login/Logout", root_path %>
        <%= link_to "Signup", root_path %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
