<%= simple_form_for(@post) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "Your secret is safe here",
        input_html: { class: "textarea" },
        wrapper: false,
        label_html: { class: "label" },
        placeholder: "Write your secret...",
        autofocus: true %>
    </div>
  </div>
  
  <%= f.error_notification message: 'Please, fullfil all the requirements' %>
  
  <% if user_signed_in? %>
    <%= f.button :submit, class: "button is-info is-outlined" %>
  <% else %>
    <p>You must be logged in to create a post*</p>
    <button class="button is-danger" title="Disabled button" disabled>Create Post</button>
  <% end %>
<% end %>
