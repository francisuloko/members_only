<%= simple_form_for(@post) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :post, label: "What's trending?",
        input_html: { class: "textarea" },
        wrapper: false,
        label_html: { class: "label" },
        placeholder: "Write your secret...",
        autofocus: true %>
    </div>
  </div>
  
  <%= f.error_notification message: 'You are not a member' %>
  
  <% if user_signed_in? %>
    <%= f.button :submit, class: "bg-primary text-white" %>
  <% else %>
    <p>Members Only</p>
    <button class="button is-danger" title="Disabled button" disabled>Create Post</button>
  <% end %>
<% end %>
