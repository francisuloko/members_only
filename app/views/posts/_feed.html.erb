<section class="">
	<article class="border border-2 p-3">
		<%= render 'posts/form' %>
	</article>

    <% @posts.each do | post | %>
        <article class="border border-2 p-3 my-3">
            <% if user_signed_in? %>
                <div class="d-flex">
                    <figure class="image is-48x48">
                        <%= gravatar_image_tag(post.user.email, size: 32, alt: post.user.email, class: "image is-rounded") %>
                    </figure>
                    <strong class="mx-3"><%= post.user.username %></strong><br/>
                </div>
                <p><%= post.post %></p>
            <% else %>
                <strong>Author (Hidden)</strong>
                <p><%= post.post %></p>
            <% end %>

            <div class='d-flex align-items-center'>
                <span>Posted on: <%= post.created_at.strftime("%d-%m-%Y (%A)") %></span>
                <% if user_signed_in? && current_user.id == post.user_id %>
                    <span  class='p-2'><%= link_to 'Show', post %></span>
                    <span  class='p-2'><%= link_to 'Edit', edit_post_path(post) %></span>
                    <span  class='p-2'><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </div>
            <% end %>
        </article>
    <% end %>
</section>